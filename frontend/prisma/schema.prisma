// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id        String      @id
  status    VideoStatus
  title     String
  url       String
  type      String
  text      String
  segments  Json[]
  createdAt Int
  updatedAt Int

  @@index([title, text])
}

enum VideoStatus {
  QUEUEING
  CONVERTING
  CONVERTED
  TRANSCRIBING
  TRANSCRIBED
}
